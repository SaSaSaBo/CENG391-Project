<?php
  session_start(); // Oturumu başlat

  include "connection.php";

  $select = "SELECT * FROM student";
  $result = $connection->query($select);

  if ($result->num_rows > 0) {
    while ($row = $result->fetch_assoc()) {
      echo "<tr>
              <td style='color: white;'>" . $row["StudentID"] . "</td>
              <td style='color: white;'>" . $row["Password"] . "</td>
              <td>";
      // Edit bağlantısını sadece giriş yapılan "StudentID" için göster
      if (isset($_SESSION['studentID']) && $row["StudentID"] == $_SESSION['studentID']) {
        echo "<a href='edit_student.php?id=" . $row["StudentID"] . "' class='edi'>Edit</a>";
      }
      echo "</td>
            </tr>";
    }
  } else {
    echo "<tr><td colspan='3'>0 results</td></tr>";
  }
?>
